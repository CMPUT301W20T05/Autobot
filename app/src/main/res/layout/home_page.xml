<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shape="oval"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextOriginLocation"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/text_style"
        android:text="@string/where_are_you"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDestinationLocation"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/text_style"
        android:text="@string/where_to_go"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOriginLocation" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapViewHomePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>