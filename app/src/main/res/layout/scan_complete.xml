<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageReceiveMoney"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/receive_money"
        android:contentDescription="Receive Money" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/imageReceiveMoney"
        android:text="Success!"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="28sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageReceiveMoney"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="@color/green3"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0.0"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="28sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/returnHomepage"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Return Homepage"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageReceiveMoney"
        android:textColor="@color/white"
        android:background="@drawable/button_blue_style"/>

</RelativeLayout>