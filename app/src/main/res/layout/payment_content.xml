<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/payment_logo_ImgView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/master"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp">

    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/card_number_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Card Number: 5510 2000 2000 2000"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

        </TextView>
        <TextView
            android:id="@+id/hold_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Hold Name: name"
            android:layout_marginLeft="15dp">

        </TextView>
        <TextView
            android:id="@+id/expire_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Expire Date: 2020-02-02"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp">

        </TextView>

    </LinearLayout>

</LinearLayout>